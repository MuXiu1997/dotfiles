# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# { XDG
    # Avoiding overwriting
    export HISTFILE="$XDG_STATE_HOME/zsh/history"
# }

# { Editor
    if type nvim &>/dev/null; then
        export EDITOR="nvim"
    fi
# }

# { Man
    if type col &>/dev/null && type bat &>/dev/null; then
        export MANPAGER='sh -c "col -bx | bat -pl man"'
    fi
# }

# { Zsh
    # Zsh vi mode config
    # Must before oh-my-zsh.zsh
    [[ ! -f "$ZDOTDIR/zvm-config.zsh" ]] || source "$ZDOTDIR/zvm-config.zsh"

    # Oh my zsh
    [[ ! -f "$ZDOTDIR/oh-my-zsh.zsh" ]] || source "$ZDOTDIR/oh-my-zsh.zsh"

    [[ ! -f "$ZDOTDIR/functions.zsh" ]] || source "$ZDOTDIR/functions.zsh"
    [[ ! -f "$ZDOTDIR/aliases.zsh" ]] || source "$ZDOTDIR/aliases.zsh"
# }

# { Cli
    # Zoxide
    if (( $+commands[zoxide] )); then eval "$(zoxide init zsh)"; else echo 'zoxide: command not found, please install it from https://github.com/ajeetdsouza/zoxide'; fi

    # Fzf
    zvm_after_init_commands+=("[[ ! -f $XDG_CONFIG_HOME/fzf.zsh ]] || source $XDG_CONFIG_HOME/fzf.zsh") # https://github.com/jeffreytse/zsh-vi-mode#execute-extra-commands

    # Fzf-tab
    zvm_after_init_commands+=("[[ ! -f $XDG_CONFIG_HOME/fzf-tab.zsh ]] || source $XDG_CONFIG_HOME/fzf-tab.zsh")
# }

# { Pgp
    export GPG_TTY="$TTY"
# }

# { Nvm
    # Don't try to load nvm if command already available
    if ! type nvm &>/dev/null; then
        [ -s "$HOMEBREW_PREFIX/opt/nvm/nvm.sh" ] && . "$HOMEBREW_PREFIX/opt/nvm/nvm.sh"
    fi
    if type nvm &>/dev/null; then
        nvm use default --silent
    fi
# }

# { Pyenv
    if type pyenv &>/dev/null; then
        eval "$(pyenv init -)"
    fi
# }

# { Goenv
    if type goenv &>/dev/null; then
        eval "$(goenv init -)"
    fi
# }

# { Jenv
    if type jenv &>/dev/null; then
        eval "$(jenv init -)"
    fi
# }

# { Direnv
    if type direnv &>/dev/null; then
        eval "$(direnv hook zsh)"
    fi
# }

# Top Priority
path=($USER_LOCAL_BIN $path)

# To customize prompt, run `p10k configure` or edit $ZDOTDIR/.p10k.zsh.
[[ ! -f "$ZDOTDIR/p10k.zsh" ]] || source "$ZDOTDIR/p10k.zsh"
