# { Homebrew
    if [[ "$(/usr/bin/uname)" == "Darwin" ]]; then
        if [[ "$(/usr/bin/uname -m)" == "arm64" ]]; then
            local HOMEBREW_PREFIX="/opt/homebrew"
        else
            local HOMEBREW_PREFIX="/usr/local"
        fi
    else # Linux
        local HOMEBREW_PREFIX="/home/linuxbrew/.linuxbrew"
    fi
    local brew="${HOMEBREW_PREFIX}/bin/brew"
    if [[ -f "$brew" ]]; then
        eval "$($brew shellenv)"
        export FPATH="$FPATH:$HOMEBREW_PREFIX/share/zsh/site-functions"
    fi
# }

# { EDITOR
    if type nvim &>/dev/null; then
        export EDITOR='nvim'
    else
        export EDITOR='vim'
    fi
# }
