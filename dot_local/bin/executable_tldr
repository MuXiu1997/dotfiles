#!/usr/bin/env python3

# Tldr cli wrapper
import os
import sys

def main():
    env = os.environ.copy()
    env['TLDR_ALLOW_INSECURE'] = '1'
    os.execvpe('uv', ['uv', 'tool', 'run', '--no-progress', '--quiet', '--python', '3.13', '--', 'tldr@latest'] + sys.argv[1:], env=env)

if __name__ == '__main__':
    main()
