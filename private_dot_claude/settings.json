{
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/play-notification.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/play-notification.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/play-notification.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
